@using Quantum.Presentation.Services

@inject NavigationProvider NavigationProvider
@inject ThemeProvider ThemeProvider

<footer>
    <div class="footer-container">
        <div class="footer-element">
            <h5>Related</h5>
            <hr length="short"/>
            <div class="space-between">
                <div class="mr-3">
                    @foreach (var related in NavigationProvider.GetPages(PageType.RELATED))
                    {
                        <div>
                            <a href="@related.Link" class="footer-link" youtube-font>@related.Name</a>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="footer-element">
            <h5>Architecture</h5>
            <hr length="short"/>
            <div class="grid" grid-columns="2">
                <div>Framework:</div>
                <div>
                    <a href="https://learn.microsoft.com/de-de/aspnet/core/?view=aspnetcore-7.0" class="footer-link" youtube-font>ASP.NET Core</a>
                </div>
                <div>UI library:</div>
                <div>
                    <a href="https://mudblazor.com/" class="footer-link" youtube-font>MudBlazor</a>
                </div>
                <div>Database:</div>
                <div>
                    <a href="https://www.mongodb.com/" class="footer-link" youtube-font>MySQL</a>
                </div>
            </div>
        </div>
        <div class="footer-element">
            <h5>Copyright</h5>
            <hr length="short"/>
            <div>&copy; @DateTime.Now.Year</div>
            <div>
                trueberryless
            </div>
            <br/>
            <div>
                <a href="/imprint" class="footer-link" youtube-font>Imprint</a>
            </div>
            <div>
                <a href="/sources" class="footer-link" youtube-font>Sources</a>
            </div>
        </div>
        <div class="footer-element">
            <h5>Donation</h5>
            <hr length="short"/>
            <div></div>
            <strong>
                <a href="https://www.paypal.com/donate/?hosted_button_id=WDQ5D2VQ6SWEC"
                   class="footer-link">
                    Please donate me a coffee!
                </a>
            </strong>
        </div>
    </div>
    <a style="cursor: default" id="vogel_a" class="footer-vogel">
        <img loading="lazy" src="@GetRandomImage()" alt="" id="vogel"/>
    </a>
</footer>

@code
{

