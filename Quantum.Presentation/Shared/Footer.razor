            "vogel7.png",
            "vogel9.png",
            "vogel10.png",
            "vogel11.png",
            "vogel12.png",
            "vogel13.png",
            "vogel14.png",
            "vogel15.png",
            "vogel16.png",
            "vogel17.png",
            "vogel18.png",
            "vogel4.gif",
            "vogel19.gif",
            "vogel20.gif",
            "vogel21.gif",
            "vogel22.gif",
